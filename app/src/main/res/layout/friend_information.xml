<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000000">
    <TextView
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/friendstitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/textView"/>

    <Button
        android:id="@+id/back_to_list"
        android:textAllCaps="false"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/list"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:id="@+id/edit"
        android:textAllCaps="false"
        android:textStyle="italic"
        android:background="@drawable/edit"
        android:layout_width="35dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_height="25dp"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <ImageView
        android:id="@+id/friend_delete"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:background="@drawable/icon_delete"
        android:layout_alignLeft="@+id/edit"
        android:layout_alignStart="@+id/edit"
        android:layout_below="@+id/textView"/>

    <ImageView
        android:id="@+id/friend"
        android:background="@drawable/friend_icon"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/friend_delete"/>

    <EditText
        android:id="@+id/friend_name"
        android:textStyle="italic"
        android:textSize="25sp"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_weight="0.90"
        android:textColor="#00cc00"
        android:gravity="center_vertical"
        android:text="郑奕嘉"
        android:layout_toRightOf="@+id/friend"
        android:layout_toEndOf="@+id/friend"
        android:layout_alignTop="@+id/friend"/>

    <LinearLayout
        android:background="@drawable/friend_detail_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/friend_delete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:text="NUMBER:"
            android:textColor="#00cc00"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"/>

        <EditText
            android:id="@+id/friend_number"
            android:textColor="#ffffff"
            android:layout_width="200dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"/>
        <TextView
            android:text="LRTITUDE/LONGITUDE:"
            android:textColor="#00cc00"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"/>

        <EditText
            android:id="@+id/friend_location"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="22.256973/113.541764"/>

        <TextView
            android:text="ALTITUDE:"
            android:textColor="#00cc00"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"/>

        <EditText
            android:id="@+id/friend_altitude"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            />
        <TextView
            android:text="ACCURACY:"
            android:textColor="#00cc00"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"/>

        <EditText
            android:id="@+id/friend_accuracy"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            />
        <TextView
            android:text="NERREST ADDRESS:"
            android:textColor="#00cc00"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"/>

        <EditText
            android:id="@+id/friend_address"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            />

        <TextView
            android:text="SECONDS SINCE LAST UPDATE:"
            android:textColor="#00cc00"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"/>

        <EditText
            android:id="@+id/friend_last_update"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            />
        <TextView
            android:text="SECONDS UTIL NEXT UPDATE:"
            android:textColor="#00cc00"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"/>

        <EditText
            android:id="@+id/friend_next_update"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            />

        <LinearLayout
            android:background="@drawable/row_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/radar"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#808080"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:textStyle="italic"
                android:background="@drawable/radar_button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <Button
                android:id="@+id/enemies_list"
                android:background="@drawable/enemies_button"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:textColor="#cc0000"
                android:textSize="25sp"
                android:textStyle="italic"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>